{
  "name": "amazon-discounts-and-promotions",
  "version": "1.0.0",
  "description": "这是一个基于 Node.js 的 RESTful API 服务，用于获取亚马逊商品的折扣和优惠信息。该服务集成了 Amazon Product Advertising API 5.0，支持多语言，并提供了丰富的搜索和过滤功能。",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "build": "tsc && copyfiles -u 1 \"src/public/**/*\" dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amm10090/Amazon-discounts-and-promotions.git"
  },
  "keywords": [
    "amazon",
    "discounts",
    "promotions",
    "api",
    "paapi5"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/amm10090/Amazon-discounts-and-promotions/issues"
  },
  "homepage": "https://github.com/amm10090/Amazon-discounts-and-promotions#readme",
  "dependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.7",
    "@types/uuid": "^10.0.0",
    "amazon-paapi": "^1.0.7",
    "axios": "^1.7.9",
    "cheerio": "^1.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "https-proxy-agent": "^7.0.6",
    "i18next": "^24.2.1",
    "i18next-http-middleware": "^3.7.1",
    "puppeteer": "^21.1.0",
    "puppeteer-core": "^21.1.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "redis": "^4.7.0",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "user-agents": "^1.1.425",
    "uuid": "^11.0.5",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
