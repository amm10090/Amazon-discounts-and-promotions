# API 配置
API_VERSION=v1
DEBUG=True
HOST=0.0.0.0
PORT=8000

# 数据库配置
DATABASE_URL=postgresql://user:password@localhost:5432/discounts_db

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Amazon Advertising API 配置
AMAZON_CLIENT_ID=your_client_id
AMAZON_CLIENT_SECRET=your_client_secret
AMAZON_REFRESH_TOKEN=your_refresh_token
AMAZON_REGION=US

# CJ API 配置
CJ_API_KEY=your_api_key
CJ_WEBSITE_ID=your_website_id

# 缓存配置
CACHE_TTL=3600  # 缓存过期时间（秒）

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log 